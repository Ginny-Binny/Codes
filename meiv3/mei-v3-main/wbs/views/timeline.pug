head
	script(src="//code.jquery.com/jquery-1.11.1.min.js")
	link#bootstrap-css(href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet")
	style
		include ./style.css
	script(src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
	script
		include script.js
	title=title
	meta(name="description", content=`Asphalt 9 MEI Database
A9 Timeline`)
	meta(name="viewport", content=`width=device-width, initial-scale=1`)

#wrapper.animate
	nav.navbar.header-top.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
		span.navbar-toggler-icon.modal-close
		a.navbar-brand(href="/") MEI - Database
		button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation")
			span.navbar-toggler-icon
		#navbarText.collapse.navbar-collapse
			ul.navbar-nav.animate.side-nav
				li.nav-item
					a.nav-link(href="/")
						| Home
						span.sr-only(current)
					each nav in navs
						a.nav-link(href=nav.path)
							| #{nav.name}
							span.sr-only(current)
			ul.navbar-nav.ml-md-auto.d-md-flex
				li.nav-item
					a.nav-link(href="https://discord.gg/KgKMgxd" target="_blank")
						| Discord
						span.sr-only(current)
	.container-fluid
		.row
			.col
				.card
					.card-body
						h5.card-title Asphalt 9: Legends Timeline
						p.card-text
							| Dates can be inaccurate, please report any error.
							br
							| We can add details for SEs, and we need help on doing that.
		.row
			.col
				.card
					.card-body
						h5.card-title Events Timeline (Global)
						table.table
							thead
								tr
								th(scope="col") #[strong DATE]
								th(scope="col") #[strong EVENT]
								th(scope="col") #[strong TYPE]
								th(scope="col") #[strong DETAILS]
							tbody
								each event in timeline
									tr
									if event.end
										th(scope="row")=`${event.start} - ${event.end}`
									else
										th(scope="row")=event.start
									td
										| #[strong #{event.name}]
									if event.type
										td
											| #[strong #{event.type}]
									else 
										td 
											| -
									if event.url
										td
											| #[strong #[a(href=event.url target="_blank") SEE MORE]]
									else 
										td 
											| -
								if timeline.length == 0
									tr
									th(scope="row") No data.