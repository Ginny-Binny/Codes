head
	script(src="//code.jquery.com/jquery-1.11.1.min.js")
	link#bootstrap-css(href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet")
	style
		include ./style.css
	script(src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
	script
		include script.js
		include searchbar.js
	title=title
	meta(name="description", content=`Asphalt 9 MEI Database
Cars list`)
	meta(name="viewport", content=`width=device-width, initial-scale=1`)

#wrapper.animate
	nav.navbar.header-top.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
		span.navbar-toggler-icon.modal-close
		a.navbar-brand(href="/") MEI - Database
		button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation")
			span.navbar-toggler-icon
		#navbarText.collapse.navbar-collapse
			ul.navbar-nav.animate.side-nav
				li.nav-item
					a.nav-link(href="/")
						| Home
						span.sr-only(current)
					each nav in navs
						a.nav-link(href=nav.path)
							| #{nav.name}
							span.sr-only(current)
			ul.navbar-nav.ml-md-auto.d-md-flex
				li.nav-item
					a.nav-link(href="https://discord.gg/KgKMgxd" target="_blank")
						| Discord
						span.sr-only(current)
	.container-fluid
		.row
			.col
				.card
					.card-body
						h5.card-title CARS
						p.card-text
							br
							input(type="text", id="searchbar", onkeyup="myFunction()", placeholder="Search for names..", style={
								"background-image": "url('/imgs/searchicon.png')",
								"background-position": "10px 12px",
								"background-repeat": "no-repeat",
								"width": "100%",
								"font-size": "16px",
								"padding": "12px 20px 12px 40px",
								"border": "1px solid #ddd",
								"margin-bottom": "12px",
							})
							br
							br
							| Class: 
							input(type="checkbox" id="class_d" name="D" onclick="checkbox('D')" checked)
							label(for="class_d") D 
							input(type="checkbox" id="class_c" name="C" onclick="checkbox('C')" checked)
							label(for="class_c") C 
							input(type="checkbox" id="class_b" name="B" onclick="checkbox('B')" checked)
							label(for="class_b") B 
							input(type="checkbox" id="class_a" name="A" onclick="checkbox('A')" checked)
							label(for="class_a") A 
							input(type="checkbox" id="class_s" name="S" onclick="checkbox('S')" checked)
							label(for="class_s") S 
							br
							br
							table.table(id="list")
								thead
									tr
									th(scope="col") #[strong CAR NAME]
									th(scope="col") #[strong CLASS]
								tbody
									each val in cars
										tr
											td
												| #[a(href=`/cars?car=${val.id}`, style={"font-size": "20px", "color": "white"}, title=val.id)=val.name]
											td
												| #[a(href=`/cars?car=${val.id}`, style={"font-size": "20px", "color": "white"})=val.class]
									if cars.length == 0
										tr
										th(scope="row") Weird situation...